<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#304558">

    <TextView
        android:id="@+id/tvplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:text="Place"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvplace"
        android:layout_below="@+id/tvplace"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="From"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvfrom"
        android:layout_below="@+id/tvfrom"
        android:layout_marginTop="19dp"
        android:text="To"
        android:textColor="#ffffff" />


    <EditText
        android:id="@+id/etfrom"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvfrom"
        android:layout_alignTop="@+id/tvfrom"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/tvfrom"
        android:textStyle="bold"
        android:textColor="#f00"
        android:textSize="20dp"
         />


    <EditText
        android:id="@+id/etto"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvto"
        android:layout_alignEnd="@+id/etfrom"
        android:layout_toEndOf="@+id/tvfrom"
        android:layout_alignBottom="@+id/tvto"
        android:layout_alignStart="@+id/etfrom"
        android:textColor="#ffffff"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/tvdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvplace"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/etfrom"
        android:text="Date"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvdatefrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etfrom"
        android:layout_toEndOf="@+id/tvdate"
        android:text="From"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvdateto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etto"
        android:layout_alignStart="@+id/tvdatefrom"
        android:text="To"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etdatefrom"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvdatefrom"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tvdatefrom"
        android:ems="10"
        android:inputType="date"
        android:layout_alignBottom="@+id/tvdatefrom" />

    <EditText
        android:id="@+id/etdateto"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etdatefrom"
        android:layout_alignTop="@+id/tvdateto"
        android:ems="10"
        android:inputType="date"
        android:layout_alignBottom="@+id/tvdateto" />

    <TextView
        android:id="@+id/tvweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvplace"
        android:layout_below="@+id/tvto"
        android:layout_marginTop="11dp"
        android:text="Weight"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvweightfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvto"
        android:layout_below="@+id/tvweight"
        android:layout_marginTop="17dp"
        android:text="From"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etweightfrom"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etto"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignEnd="@+id/etto"
        android:layout_alignTop="@+id/tvweightfrom"
        android:layout_alignBottom="@+id/tvweightfrom" />

    <TextView
        android:id="@+id/tvweightto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvweightfrom"
        android:layout_below="@+id/tvweightfrom"
        android:layout_marginTop="12dp"
        android:text="To"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etweightto"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvweightto"
        android:layout_alignEnd="@+id/etweightfrom"
        android:layout_alignStart="@+id/etweightfrom"
        android:layout_alignTop="@+id/tvweightto"
        android:ems="10"
         />

    <Button
        android:id="@+id/btsearch"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/etweightto"
        android:layout_alignStart="@+id/etdateto"
        android:layout_alignTop="@+id/etweightfrom"
        android:layout_marginRight="10dp"
        android:background="@drawable/bushape"
        android:text="Search" />


    <ListView
        android:layout_margin="15dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/lvdata"
        android:layout_below="@+id/btsearch"
        android:dividerHeight="10sp"> </ListView>




</RelativeLayout>